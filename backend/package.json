{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend para o TCC Usina Guara",
  "main": "dist/src/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsoa:build": "tsoa routes && tsoa spec",
    "build": "npm run tsoa:build && tsc",
    "start": "node dist/src/app.js",
    "dev": "npm run tsoa:build && concurrently \"tsoa routes -w\" \"tsoa spec -w\" \"ts-node-dev --respawn src/app.ts\""
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.5.4",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "prettier": "^3.5.3"
  }
}